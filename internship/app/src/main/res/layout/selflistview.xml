<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_margin="@dimen/font_22"
        android:layout_width="match_parent"
        android:layout_height="100dp">
    <edu.scse.onlineshool.selfwidget.RoundImageView
        android:id="@+id/self_listview_imgIcon"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"/>
    <TextView
        android:id="@+id/self_listview_text"
        android:text="文字描述"
        android:textSize="@dimen/font_12"
        android:layout_toRightOf="@+id/self_listview_imgIcon"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/self_listview_text_01"
        android:text="文字描述"
        android:textSize="@dimen/font_8"
        android:layout_toRightOf="@+id/self_listview_imgIcon"
        android:layout_marginLeft="20dp"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/self_listview_button"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:background="@drawable/buttonstyle"
        android:text="马上看"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"
        android:textSize="@dimen/font_8" />

    </RelativeLayout>

</RelativeLayout>