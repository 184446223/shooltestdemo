<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">
        <edu.scse.onlineshool.selfwidget.RoundImageView
            android:id="@+id/self_listviewclass_imgIcon"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"/>
        <TextView
            android:id="@+id/self_listviewclass_text"
            android:text="文字描述"
            android:textSize="@dimen/font_18"
            android:layout_toRightOf="@+id/self_listviewclass_imgIcon"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/self_listviewclass_text_2"
            android:text="文字描述"
            android:textSize="@dimen/font_12"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/self_listviewclass_imgIcon"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/self_listviewclass_text_3"
            android:text="文字描述"
            android:textSize="@dimen/font_16"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/self_listviewclass_imgIcon"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>